@model Forum_Project.ViewModels.ForumViewModel

<h3>Add Forum</h3>

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForumName"></label>
                <input class="form-control" type="text" asp-for="ForumName" />
                <span asp-validation-for="ForumName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>