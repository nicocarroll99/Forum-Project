@model Forum_Project.ViewModels.ThreadViewModel

<h3>Add Thread</h3>

<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThreadTitle"></label>
                <input class="form-control" type="text" asp-for="ThreadTitle" />
                <span asp-validation-for="ThreadTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input class="form-control" type="text" asp-for="Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
